<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_item"
    android:background="@drawable/item_default_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/imageLayout"
        android:layout_width="65dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_centerVertical="true"
            android:background="@drawable/item_default_image"
            android:scaleType="fitXY" />
        
        <TextView 
            android:id="@+id/leftNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:background="@drawable/item_frame_bg"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageLayout"
        android:gravity="center_vertical"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/time"
            style="@style/mine_style2"
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="" />

        <TextView
            android:id="@+id/title"
            android:layout_marginTop="5dp"
            style="@style/infomation_item_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/time"
            android:text="" />
        
        <TextView
            android:id="@+id/type"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content"
            style="@style/mine_style2"
            android:layout_marginTop="7dp"
            android:layout_below="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginRight="40dp"
            android:text="" />
    </RelativeLayout>

</RelativeLayout>