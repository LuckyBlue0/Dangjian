<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/head" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/branch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="广州天河区党委组织部"
                android:textColor="#4c4c4c"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/branch_img"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/branch_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/branch_pic"
                android:padding="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_l_680x250" />

            <RelativeLayout
                android:id="@+id/renshuLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/branch_img"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg" >

                <RelativeLayout
                    android:id="@+id/relCount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:text="组织人数"
                        android:textColor="#4c4c4c"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/branch_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:text="12"
                        android:textColor="#8d8d8d"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relCount"
                    android:background="@drawable/branch_divider" />

                <RelativeLayout
                    android:id="@+id/relChairman"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relCount"
                    android:padding="15dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:text="支部书记"
                        android:textColor="#4c4c4c"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/branch_chairman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:text="张三"
                        android:textColor="#8d8d8d"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/renshuLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg"
                android:gravity="center"
                android:padding="8dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/relScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relCount"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/txtScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:layout_toLeftOf="@+id/lineDivider"
                        android:text="组织积分"
                        android:textColor="#4c4c4c"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/branch_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtScore"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/lineDivider"
                        android:text="32"
                        android:textColor="#c90100"
                        android:textSize="15sp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/lineDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/branch_linevetical" />

                <RelativeLayout
                    android:id="@+id/relRank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/txtRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/lineDivider"
                        android:text="组织排名"
                        android:textColor="#4c4c4c"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/branch_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtRank"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/lineDivider"
                        android:text="3"
                        android:textColor="#c90100"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relBranchList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearData"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg"
                android:padding="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:text="查看支部通讯录"
                    android:textColor="#4c4c4c"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/branch_arrow" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relPartyworkList"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relBranchList"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg"
                android:padding="15dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:text="查看党务工作者通讯录"
                    android:textColor="#4c4c4c"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/branch_arrow" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>