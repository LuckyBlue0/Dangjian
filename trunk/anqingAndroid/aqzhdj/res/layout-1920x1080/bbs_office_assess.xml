<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E2DFD8"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="#FFF5E4"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/office_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="南山党政机关"
                android:textColor="#515150"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/office_vote_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="(已评议)"
                android:textColor="#515150"
                android:textSize="15dp"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:background="#FFF5E4" >

            <TextView
                android:id="@+id/office_assess_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="您还没对该机关评议,马上做出选择吧!"
                android:textColor="#C42C27"
                android:textSize="16sp"
                android:visibility="visible" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/body_bg"
            android:padding="10dp" >

            <RadioButton
                android:id="@+id/btn_radio1"
                style="@drawable/btn_radio"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_assess"
                android:text="满意"
                android:textColor="#5A5A5A"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/btn_radio2"
                style="@drawable/btn_radio"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_assess"
                android:text="基本满意"
                android:textColor="#5A5A5A"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/btn_radio3"
                 style="@drawable/btn_radio"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_assess"
                android:text="不了解"
                android:textColor="#5A5A5A"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/radio_asscess"
                 style="@drawable/btn_radio"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/radio_assess"
                android:text="不满意"
                android:textColor="#5A5A5A"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edit_assess_content"
                android:layout_marginTop="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_bg"
                android:gravity="left|top"
                android:hint="输入评议意见和评议不满说明"
                android:lines="6"
                android:padding="10dp"
                android:textColor="#5A5A5A"
                android:textSize="16sp"
                android:visibility="invisible" />
        </RadioGroup>

        <!-- <Button -->
        <!-- android:id="@+id/btn_office_submit" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_marginLeft="10dp" -->
        <!-- android:layout_marginRight="10dp" -->
        <!-- android:background="@drawable/btn_office_access_submit" -->
        <!-- android:text="提交" -->
        <!-- android:textSize="16sp" /> -->
    </LinearLayout>

</LinearLayout>