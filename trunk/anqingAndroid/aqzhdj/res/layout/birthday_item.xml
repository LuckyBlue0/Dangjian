<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/join_dues_birthday" >

    <ImageView
        android:id="@+id/itemImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/joinText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\t\t同志,今天是您的“政治生日”,祝贺您加入中国共产党,值此之际,向您致以亲切的问候和崇高的敬意,对您为党的事业做出的贡献表示衷心的感谢!"
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/joinText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/joinText"
            android:text="——中共广州市天河区委组织部"
            android:textColor="#000000"
            android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>