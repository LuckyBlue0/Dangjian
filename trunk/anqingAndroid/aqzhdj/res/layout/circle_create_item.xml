<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:background="@drawable/item_default_bg"
                android:layout_height="wrap_content" android:layout_below="@+id/ly_title_1"
                    android:orientation="vertical" android:padding="10dp"
                android:id="@+id/ly_title_2"
        >
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="11dp"
                        android:layout_marginRight="11dp" android:layout_marginBottom="11dp"
            android:id="@+id/item_circle_logo" android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建圈子"
            android:id="@+id/item_circle_text"
            style="@style/infomation_item_title"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/item_circle_logo"
            android:layout_centerVertical="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/imageView1" android:layout_alignParentRight="true"
            android:layout_centerVertical="true" android:background="@drawable/arrow"/>
</RelativeLayout>