<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_activity_bg"
    android:paddingBottom="10dp" >

    <TextView
        android:id="@+id/activityName"
        style="@style/text_regiter"
        android:layout_toLeftOf="@+id/imgFinish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="" />

    <ImageView
        android:id="@+id/imgUnstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/circle_activity_unstart" />
    
    <ImageView
        android:id="@+id/imgStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/circle_activity_start" />

    <ImageView
        android:id="@+id/imgFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@drawable/circle_activity_finish" />

    <TextView
        android:id="@+id/paizhao"
        style="@style/mine_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activityName"
        android:layout_below="@+id/activityName"
        android:text="发起人：" />

    <TextView
        android:id="@+id/sponser"
        style="@style/mine_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityName"
        android:layout_toRightOf="@+id/paizhao"
        android:text="张三" />

    <!--  <TextView
        android:id="@+id/textView3"
        style="@style/mine_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activityName"
        android:layout_below="@+id/textView1"
        android:text="所属群组：" />

    <TextView
        android:id="@+id/circleName"
        style="@style/mine_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/textView3"
        android:text="" />-->

    <TextView
        android:id="@+id/textView5"
        style="@style/mine_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activityName"
        android:layout_below="@+id/sponser"
        android:text="活动地点：" />

    <TextView
        android:id="@+id/activityAddr"
        style="@style/mine_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleName"
        android:layout_alignTop="@id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:text="" />

    <TextView
        android:id="@+id/textView7"
        style="@style/mine_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activityName"
        android:layout_below="@+id/activityAddr"
        android:text="活动时间：" />

    <TextView
        android:id="@+id/activityTime"
        style="@style/mine_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activityAddr"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="" />

    <TextView
        android:id="@+id/textView9"
        style="@style/mine_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activityName"
        android:layout_below="@+id/activityTime"
        android:text="活动规则：" />

    <cn.com.do1.dqdp.android.component.DqdpTextView
        android:id="@+id/activityRole"
        style="@style/mine_style2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/activityName"
        android:layout_below="@+id/textView9"
        android:layout_marginRight="15dp"
        showLength="100"
        android:text="" />

</RelativeLayout>