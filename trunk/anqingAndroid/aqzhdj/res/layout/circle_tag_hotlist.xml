<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:background="@drawable/body_bg"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <include layout="@layout/circle_head" android:id="@+id/include_head"/>
    <include layout="@layout/circle_midle_switch" android:id="@+id/include_midle"/>
    <RelativeLayout
            android:id="@+id/taghot_lay"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="篮球"
                android:id="@+id/textView"
                android:textColor="#000000"
                android:textSize="20sp" android:layout_alignParentLeft="true" android:layout_marginLeft="18dp"
                android:layout_alignParentTop="true" android:layout_marginTop="15dp" android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我最爱的"
                android:id="@+id/paizhao" android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_marginTop="15dp"
                android:layout_alignParentRight="true" android:layout_alignTop="@+id/textView"
                android:textColor="#ff595b" android:textSize="20sp" android:layout_marginRight="15dp"
                android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门电影"
                android:id="@+id/textView2" android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_below="@+id/paizhao"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="8dp" android:textSize="23sp" android:textColor="#ffb03f"
                android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="肯得基"
                android:id="@+id/textView3" android:layout_alignParentTop="false"
                android:layout_below="@+id/textView2" android:layout_marginTop="15dp" android:layout_marginLeft="105dp"
                android:textSize="15sp" android:textColor="#4465c1" android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家长群"
                android:id="@+id/textView4" android:layout_alignParentLeft="false"
                android:layout_alignBottom="@+id/textView3" android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" android:textColor="#8940ff" android:textSize="30sp"
                android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自行车"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView3" android:layout_marginLeft="30dp" android:textColor="#608853"
                android:textSize="16sp" android:layout_marginTop="8dp" android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="羽毛球"
                android:id="@+id/textView6" android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView5" android:textSize="47sp" android:textColor="#3196e3"
                android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年轻妈妈"
                android:id="@+id/textView7" android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_below="@+id/textView6"
                android:layout_alignParentRight="true" android:layout_marginTop="15dp"
                android:layout_marginRight="15dp" android:textColor="#4465c1" android:textSize="15sp"
                android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最爱的音乐"
                android:id="@+id/textView8" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false" android:layout_below="@+id/textView6"
                android:layout_marginTop="20dp" android:layout_marginLeft="15dp" android:textColor="#e42860"
                android:textSize="20sp" android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="道一信息技术"
                android:id="@+id/textView9" android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true" android:layout_marginLeft="15dp"
                android:layout_marginTop="16dp" android:textSize="23sp" android:textColor="#5ec5a8"
                android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单反世界"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:layout_alignParentLeft="true" android:layout_marginTop="20dp" android:layout_marginLeft="30dp"
                android:textSize="15sp" android:textColor="#ccae85" android:typeface="sans"/>
        <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="乒乓球"
                android:id="@+id/textView11"
                android:layout_below="@+id/textView9" android:layout_marginTop="25dp"
                android:layout_marginRight="30dp" android:layout_alignParentRight="true" android:textSize="13sp"
                android:textColor="#dedbd8" android:typeface="sans"/>

    </RelativeLayout>
    <LinearLayout
            android:id="@+id/textTip"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@drawable/back_prompt" android:gravity="center_vertical">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明：标签投票数量满20后，该标签自动投入使用"
                android:layout_gravity="center|left" android:layout_marginLeft="10dp"
                style="@style/list_tip"/>
    </LinearLayout>

    <ListView
            android:visibility="gone"
            style="@style/list_view_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
</LinearLayout>