<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent" android:background="@drawable/item_default_bg"
                android:paddingRight="12dp"
                android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签名称：" style="@style/text_circle_list"
                android:id="@+id/textView"
                android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" style="@style/text_circle_list"
                android:id="@+id/text_tagName" android:layout_alignParentTop="false"
                android:layout_toRightOf="@+id/textView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已投票：" style="@style/notice_content3"
                android:id="@+id/textView2" android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false" android:layout_below="@+id/textView"
                android:layout_alignLeft="@+id/textView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" style="@style/notice_content3"
                android:id="@+id/text_tagVotes" android:layout_alignParentLeft="false"
                android:layout_toRightOf="@+id/textView2" android:layout_alignTop="@+id/textView2"/>
    </RelativeLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_alignParentRight="true"
            android:background="@drawable/btn_ding"
            android:layout_centerVertical="true"/>
</RelativeLayout>