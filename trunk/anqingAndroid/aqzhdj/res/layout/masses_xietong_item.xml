<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/notice_item_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_wenhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="问号:宜政办(2013)214号"
            android:textColor="@color/red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title"
            style="@style/notice_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_wenhao"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="安庆市人民政府关于开展安全安庆建设年活动工作意见" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:id="@+id/author"
                style="@style/notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sendTime"
                style="@style/notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2013-10-10" />

            <TextView
                android:id="@+id/digest"
                style="@style/notice_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic"
                android:layout_marginTop="10dp"
                android:text="" />

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/digest"
                android:layout_marginTop="10dp"
                android:background="#dbdbdb" />

            <TextView
                android:id="@+id/quanwen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/arrow"
                android:text="查看全文"
                android:textColor="@color/black" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>