<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modelListLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/head" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notice_item_bg"
                android:gravity="center_vertical"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:padding="10dp" >

                <TextView
                    style="@style/mine_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题：" />

                <EditText
                    android:id="@+id/title"
                    style="@style/mine_style2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="输入标题" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/content"
                    style="@style/mine_style2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="left"
                    android:hint="请输入留言内容"
                    android:lines="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/mine_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名：" />

                <EditText
                    android:id="@+id/personName"
                    style="@style/mine_style2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="请输入姓名" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/mine_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式：" />

                <EditText
                    android:id="@+id/lianxifangshi"
                    style="@style/mine_style2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="请输入联系方式" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/notice_item_bg"
                android:gravity="center_vertical"
                android:padding="10dp" >

                <TextView
                    style="@style/mine_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系地址：" />

                <EditText
                    android:id="@+id/lianxidizhi"
                    style="@style/mine_style2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="right"
                    android:hint="请输入联系地址" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>