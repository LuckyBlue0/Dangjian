<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <!--  -->
    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/sign_meeting_listbg"
        android:layout_toLeftOf="@+id/codeLayout"
        android:padding="6dp" >
        <TextView android:id="@+id/txtMeetingId"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:visibility="gone"/>
        <TextView android:id="@+id/txtType"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:visibility="gone"/>
        <TextView android:id="@+id/txtTitle"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/imgIcon"
		    android:layout_alignTop="@+id/imgIcon"
		    android:textSize="16sp"
		    android:textColor="#4c4c4c"
		    android:text=""
		    android:maxLines="2"
		    android:ellipsize="end"
		    android:layout_marginBottom="5dp" />
        
        <TextView android:id="@+id/lblDate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/txtTitle"
		    android:layout_alignLeft="@+id/txtTitle"
		    android:textSize="16sp"
		    android:textColor="#8d8d8d"
		    android:text="会议时间：" />
		<TextView android:id="@+id/txtDate"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@+id/lblDate"
		    android:textSize="16sp"
		     android:layout_below="@+id/txtTitle"
		    android:textColor="#8d8d8d"
		    android:text="" />
		
		<TextView android:id="@+id/lblAddress"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/lblDate"
		    android:layout_alignLeft="@+id/txtTitle"
		    android:textSize="16sp"
		    android:textColor="#8d8d8d"
		    android:text="会议地点："
		    android:layout_marginTop="3dp" />
		<TextView android:id="@+id/txtAddress"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp" 
		    android:layout_toRightOf="@+id/lblAddress"
		    android:textSize="16sp"
		     android:layout_below="@+id/lblDate"
		    android:textColor="#8d8d8d"
		    android:text="" />
		
		<TextView android:id="@+id/lblSigns"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/txtAddress"
		    android:layout_alignLeft="@+id/txtTitle"
		    android:textSize="16sp"
		    android:textColor="#8d8d8d"
		    android:text="已签到人数："
		    android:layout_marginTop="3dp"  />
		<TextView android:id="@+id/txtSigns"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp" 
		    android:layout_toRightOf="@+id/lblSigns"
		    android:layout_below="@+id/txtAddress"
		    android:textSize="16sp"
		    android:textColor="#c90100"
		    android:text="" />
		<TextView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp" 
		    android:layout_toRightOf="@+id/txtSigns"
		    android:layout_below="@+id/txtAddress"
		    android:textSize="16sp"
		    android:textColor="#c90100"
		    android:text="人" />
    </RelativeLayout>
    
    <LinearLayout android:id="@+id/codeLayout"
        android:background="@drawable/sign_meeting_code_bg"
        android:layout_width="110dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView android:id="@+id/imgCode"
            android:src="@drawable/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView android:id="@+id/txtStatusValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <TextView android:id="@+id/txtStatusLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
		    android:textColor="#8d8d8d"
		    android:text="二维码签到"/>
    </LinearLayout>

</RelativeLayout>