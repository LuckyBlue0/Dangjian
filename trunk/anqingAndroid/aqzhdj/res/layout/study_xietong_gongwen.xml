                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="问号:宜政办(2013)214号"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/title"
                    style="@style/notice_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:text="安庆市人民政府关于开展安全安庆建设年活动工作意见" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >

                    <TextView
                        android:id="@+id/sendTime"
                        style="@style/notice_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2013-1-17" />

                    <TextView
                        android:id="@+id/author"
                        style="@style/notice_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sendTime"
                        android:paddingTop="10dp"
                        android:text="拟稿单位:市政府" />

                    <TextView
                        android:id="@+id/digest"
                        style="@style/notice_content"
                        android:layout_width="wrap_content"
