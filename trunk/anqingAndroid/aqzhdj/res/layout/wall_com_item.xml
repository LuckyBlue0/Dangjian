<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/wall_item_bg"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/new_mine_logo"
            android:padding="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_m_104" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/wall_o" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:padding="5dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wall_item_head"
            android:paddingLeft="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingLeft="3dp"
                android:paddingRight="5dp"
                android:text="时间"
                android:textColor="#8D8D8D"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/title"
                style="@style/mine_style"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/time"
                android:text="这是评论" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wall_item_body"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/content"
                style="@style/mine_style2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="40dp"
                android:text="这是评论内容" />

            <ImageView
                android:id="@+id/comimg"
                android:visibility="gone"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="3dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/new_wall_small_bg"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/address"
                android:visibility="gone"
                android:textColor="#8d8d8d"
                android:textSize="12sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="40dp"
                android:text=""/>
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wall_item_foot" />
    </LinearLayout>

</LinearLayout>