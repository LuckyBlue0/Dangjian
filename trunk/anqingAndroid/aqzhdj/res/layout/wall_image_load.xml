<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/body_bg"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/head" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_item_bg"
                android:padding="10dp" >

                <TextView
                    style="@style/mine_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="相册名称" />

                <EditText
                    android:id="@+id/name"
                    style="@style/mine_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@color/transparent"
                    android:hint="输入名称"
                    android:singleLine="true" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/typeLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/more_item_bg"
                android:padding="10dp" >

                <TextView
                    style="@style/mine_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="留影墙类型" />

                <ImageView
                    android:id="@+id/arraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/arrow" />

                <Spinner
                    android:id="@+id/typeSpin"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:paddingRight="5dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/more_item_bg"
                android:orientation="vertical"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/des"
                    style="@style/mine_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="添加图片（最多上传3张）" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/notice_line" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/btn_add_img"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:id="@+id/delImage"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/new_wall_bg"
                            android:visibility="gone" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/new_wall_del" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/btn_add_img"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:id="@+id/delImage2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/new_wall_bg"
                            android:visibility="gone" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/new_wall_del" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1" >

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@drawable/btn_add_img"
                            android:scaleType="fitXY" />

                        <RelativeLayout
                            android:id="@+id/delImage3"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/new_wall_bg"
                            android:visibility="gone" >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="2dp"
                                android:background="@drawable/new_wall_del" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/more_item_bg"
                android:padding="10dp" >

                <EditText
                    android:id="@+id/content"
                    style="@style/mine_style"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/transparent"
                    android:gravity="top|left"
                    android:hint="请输入相册简介"
                    android:lines="5" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>