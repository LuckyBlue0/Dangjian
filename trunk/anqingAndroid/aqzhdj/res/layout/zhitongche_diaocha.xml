<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/body_bg" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/head" />

    <RelativeLayout
        android:layout_below="@+id/headLayout"
        android:id="@+id/layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/notice_item_bg"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/isTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/bbs_office_topbg2"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title"
                style="@style/notice_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/isTop"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="20dp"
                android:text="关于安庆市举办创意大赛口号征集活动" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp" >

                <TextView
                    android:id="@+id/author_"
                    style="@style/notice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者："
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/author"
                    style="@style/notice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/author_"
                    android:text=""
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/sendTime"
                    style="@style/notice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布人:安庆市委组织部" />

                <TextView
                    android:id="@+id/date"
                    style="@style/notice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/pic"
                    android:layout_width="fill_parent"
                    android:layout_height="180dp"
                    android:layout_below="@+id/sendTime"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/minyi"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/digest"
                    style="@style/notice_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pic"
                    android:layout_marginTop="10dp"
                    android:text="关于开展健全党员能进能出机制专题调研的通知" />

                <TextView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/digest"
                    android:layout_marginTop="10dp"
                    android:background="#dbdbdb" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line" >

                    <TextView
                        android:id="@+id/quanwen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="查看全文"
                        android:textColor="@color/black" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/rightjiantou" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>